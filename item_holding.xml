<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/holding_symbol"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="AAPL"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/holding_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apple Inc."
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/holding_shares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 מניות"
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/holding_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₪2,540.30"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/holding_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+2.34%"
            android:textColor="@color/profit_green"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>